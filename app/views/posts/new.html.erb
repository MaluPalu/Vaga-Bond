<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :post, url:"/:city_name/posts/new" do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.submit "Add Post", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
