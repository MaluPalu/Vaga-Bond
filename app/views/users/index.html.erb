<% if flash[:alert] %>
	<div class="alert"><font color="red"><%= flash[:alert] %></font></div>
<% end %>
 <div class="slider">
    <ul class="slides">
      <!-- You can use an each loop instead of hard-coding these images -->
      <!-- i.e. in your users controller's index method, you can set an -->
      <!-- images array to loop through (i.e. ['map.jpg', 'liverpool.jpg', etc]) -->
      <li>
        <%= image_tag 'map.jpg' %> <!-- random image -->
        <div class="caption center-align">
          <h3>Welcome to Vagabond!</h3>
          <h5 class="light grey-text text-lighten-3">Where will we go next?</h5>
        </div>
      </li>
      <li>
        <%= image_tag 'liverpool.jpg' %> <!-- random image -->
        <div class="caption left-align">
